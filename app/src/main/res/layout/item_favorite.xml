<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

        <variable
            name="favorite"
            type="com.zs.my_ecommerce.bean.Favorite" />
    </data>

    <com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        app:flingVelocity="300"
        app:dragEdge="left"
        app:mode="same_level">

        <!-- 隐藏的按钮区域（左滑后显示） -->
        <LinearLayout
            android:id="@+id/hidden_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- 编辑按钮 -->
            <Button
                android:id="@+id/btn_edit"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="#FF9800"
                android:gravity="center"
                android:text="编辑"
                android:textColor="#FFFFFF" />

            <!-- 删除按钮 -->
            <Button
                android:id="@+id/btn_delete"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="#F44336"
                android:gravity="center"
                android:text="删除"
                android:textColor="#FFFFFF" />
        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="4dp"
                android:paddingTop="4dp"
                android:paddingRight="4dp"
                android:paddingBottom="4dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/productImage"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:contentDescription="@string/app_name"
                    android:downloadUrl="@{favorite.thumbnail}"
                    android:scaleType="fitXY"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/productTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:maxLines="1"
                    android:text="@{favorite.title}"
                    android:textColor="@color/light_black"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@id/productImage"
                    app:layout_constraintTop_toTopOf="@id/productImage"
                    tools:text="19.9" />

                <TextView
                    android:id="@+id/productDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="@{favorite.description}"
                    android:textColor="@color/light_black"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@id/productImage"
                    app:layout_constraintTop_toBottomOf="@id/productTitle"
                    tools:text="19.9" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:numStars="1"
                    android:progressTint="@color/dark_orange"
                    android:rating="1"
                    android:scaleX="0.4"
                    android:scaleY="0.4"
                    android:stepSize="1"
                    app:layout_constraintBottom_toBottomOf="@id/productImage"
                    app:layout_constraintStart_toStartOf="@id/productTitle" />

                <TextView
                    android:id="@+id/ratingCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{String.valueOf(favorite.rating)}"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="@id/ratingBar"
                    app:layout_constraintStart_toEndOf="@id/ratingBar"
                    app:layout_constraintTop_toTopOf="@id/ratingBar"
                    tools:text="4.9" />

                <TextView
                    android:id="@+id/productPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:fontFamily="sans-serif"
                    android:text="@{String.valueOf(favorite.price)}"
                    android:textColor="@color/green"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@id/ratingBar"
                    app:layout_constraintEnd_toStartOf="@id/buttonAddToCart"
                    app:layout_constraintTop_toTopOf="@id/ratingBar"
                    tools:text="19.9" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonAddToCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple_bg_add"
                    android:backgroundTint="@color/orange"
                    android:fontFamily="sans-serif"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    android:text="@string/add_to_chart"

                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="@id/ratingBar"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/ratingBar" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


    </com.chauthai.swipereveallayout.SwipeRevealLayout>
</layout>
