<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

        <variable
            name="cart"
            type="com.zs.my_ecommerce.bean.Cart" />
    </data>

    <com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        app:dragEdge="right"
        app:flingVelocity="300"
        app:mode="same_level">

        <!-- 隐藏的按钮区域（左滑后显示） -->
        <LinearLayout
            android:id="@+id/hidden_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- 删除按钮 -->
            <TextView
                android:id="@+id/slideDeleteBtn"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="#F44336"
                android:gravity="center"
                android:text="Delete"
                android:textColor="#FFFFFF" />
        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="4dp"
                android:paddingTop="4dp"
                android:paddingRight="4dp"
                android:paddingBottom="4dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/productImage"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:contentDescription="@string/app_name"
                    android:downloadUrl="@{cart.thumbnail}"
                    android:scaleType="fitXY"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/productTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:maxLines="1"
                    android:text="@{cart.title}"
                    android:textColor="@color/light_black"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@id/productImage"
                    app:layout_constraintTop_toTopOf="@id/productImage"
                    tools:text="19.9" />

                <TextView
                    android:id="@+id/productDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="@{cart.description}"
                    android:textColor="@color/light_black"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@id/productImage"
                    app:layout_constraintTop_toBottomOf="@id/productTitle"
                    tools:text="19.9" />

                <ImageView
                    android:id="@+id/minusButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    android:src="@drawable/ic_minus"
                    app:layout_constraintBottom_toBottomOf="@id/plusButton"
                    app:layout_constraintEnd_toStartOf="@id/editText"
                    app:layout_constraintTop_toTopOf="@id/plusButton" />

                <EditText
                    android:id="@+id/editText"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginHorizontal="4dp"
                    android:background="@drawable/product_quantity_container"
                    android:text="@{String.valueOf(cart.num)}"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="@id/plusButton"
                    app:layout_constraintEnd_toStartOf="@id/plusButton"
                    app:layout_constraintTop_toTopOf="@id/plusButton" />

                <ImageView
                    android:id="@+id/plusButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_plus"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/productPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:fontFamily="sans-serif"
                    android:text="@{String.valueOf(cart.price)}"
                    android:textColor="@color/green"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@id/plusButton"
                    app:layout_constraintStart_toStartOf="@id/productTitle"
                    app:layout_constraintTop_toTopOf="@id/plusButton"
                    tools:text="19.9" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </com.chauthai.swipereveallayout.SwipeRevealLayout>
</layout>
